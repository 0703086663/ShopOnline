          <h3>jordan x phongstore</h3>
          <h1>sneakers</h1>
          <button class="btn btn-outline-light">shop now!</button>
        </div>
      </div>
      <div class="carousel-item">
        <img class="img-slide-index" src="/images/slide2.png" class="d-block w-100" alt="slide2">
        <div class="slide-text">
          {{!-- <h3>Small badge</h3> --}}
          <h1>phong store x gucci</h1>
          <button class="btn btn-outline-light">shop now!</button>
        </div>
      </div>
      <div class="carousel-item">
        <img class="img-slide-index" src="/images/slide3.png" class="d-block w-100" alt="slide3">
        <div class="slide-text">
          <h3>gucci love parada</h3>
          <h1>gucci blondie</h1>
          <button class="btn btn-outline-light">shop now!</button>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselIndex" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndex" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
