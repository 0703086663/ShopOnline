    <div class="hero-text">
      <h1>Good<br><span>shoes</span><br> take you<br>good places</h1>
      <a href="#">
        <button class="btn btn-outline-dark">Shop now!</button>
      </a>
    </div>
  </div>

  <div class="wrap">
      <div class="shoe-sections">
        <button class="active" data-switch="#shoe-best-seller">best sellers</button>
        <button data-switch="#shoe-available">new arrivals</button>
      </div>

    <div id="shoe-sections-index">  
      <div id="shoe-best-seller">
        <section class="cards">
          {{#each shoeBestseller}}
            <div class="card">
              <div class="img-container">
                <a href="/shoe/{{this._id}}?shoeDetailTitle=Best%20Seller&brandid={{this.brand._id}}">
                  <img src="../uploads/{{this.image}}" alt="{{this.name}}" class="images-index">
                  <div class="overlay">See detail</div>
                </a>
              </div>
              <div class="content">
                <span class="badge-text">{{this.brand.name}}</span>
                <div class="badge-headline">{{this.name}}</div>
                <span class="badge-text">{{this.type.name}}</span>
                <div class="badge-price mb-4 money-dot-anywhere" id="money-dot">{{this.price}}</div>
              </div>
            </div>
          {{/each}}
        </section>
      </div> 

      <div id="shoe-available" style="display:none">
        <section class="cards">
          {{#each shoeAvailable}}
            <div class="card">
              <div class="img-container">
                <a href="/shoe/{{this._id}}?shoeDetailTitle=New%20Arrival&brandid={{this.brand._id}}">
                  <img src="../uploads/{{this.image}}" alt="{{this.name}}" class="images-index">
                  <div class="overlay">See detail</div>
                </a>
              </div>
              <div class="content">
                <span class="badge-text">{{this.brand.name}}</span>
                <div class="badge-headline">{{this.name}}</div>
                <span class="badge-text">{{this.type.name}}</span>
                <div class="badge-price mb-4 money-dot-anywhere" id="money-dot">{{this.price}}</div>
              </div>
            </div>
          {{/each}}
        </section>
      </div>
    </div>
    
