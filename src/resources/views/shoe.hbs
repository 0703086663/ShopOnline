<div class="wrapper shoe-index">
    <section>
        <div class="row">
            <div class="col-3 left-list">
                <h2>Categories</h2>
                <ul class="list-group">
                    {{#each shoeType}}
                        <li class="list-group-item"><a href="/shoe?shoeType={{this._id}}">{{this.name}}</a></li>
                    {{/each}}
                </ul>



                <h2 class="mt-5">Brands</h2>
                <ul class="list-group">
                    {{#each brandList}}
                        <li class="list-group-item">{{this.name}}</li>
                    {{/each}}
                </ul>



                <div class="row mt-5">
                    <div class="col-3">
                        <h2 class="">Filter:</h2>
                    </div>
                    <div class="col-9">
                        <div class="filter-color">
                            <h2 class="filter-shoe-btn"><i class="fa fa-minus">  color</i></h2>
                            <ul class="filter-group">
                                <li class="list-group-item">White</li>
                                <li class="list-group-item">Black</li>
                                <li class="list-group-item">Red</li>
                                <li class="list-group-item">Green</li>
                                <li class="list-group-item">Blue</li>
                                <li class="list-group-item">Yellow</li>
                                <li class="list-group-item">Orange</li>
                                <li class="list-group-item">Grey</li>
                                <li class="list-group-item">Purple</li>
                            </ul>
                        </div>
                        <div class="filter-size">
                            <h2 class="mt-4 filter-shoe-btn"><i class="fa fa-minus">  size</i></h2>
                            <ul class="filter-group">
                                <li class="list-group-item">34-35</li>
                                {{!-- <li class="list-group-item">35</li> --}}
                                <li class="list-group-item">36-37</li>
                                {{!-- <li class="list-group-item">37</li> --}}
                                <li class="list-group-item">38-39</li>
                                {{!-- <li class="list-group-item">39</li> --}}
                                <li class="list-group-item">40-41</li>
                                {{!-- <li class="list-group-item">41</li> --}}
                                <li class="list-group-item">42-43</li>
                                {{!-- <li class="list-group-item">43</li> --}}
                                <li class="list-group-item">44-45</li>
                                {{!-- <li class="list-group-item">45</li> --}}
                                <li class="list-group-item">46</li>
                            </ul>
                        </div>
                    </div>
                </div>



                <div class="row mt-5">
                    <div class="col-3 pt-2">
                        <h2>Sort: </h2>
                    </div>

                    <div class="col-9">
                        <ul class="list-group">
                            <li class="list-group-item">New Arrivals</li>
                            <li class="list-group-item">Cheaper</li>
                            <li class="list-group-item">Expensive</li>
                            <li class="list-group-item">Best Seller</li>
                            <li class="list-group-item">Available</li>
                        </ul>
                    </div>
                </div>
            </div>

            {{!-- Responsive of left list filter for table, mobile --}}
            <div class="responsive-left-list">
                <ul>
                    <li select-item="responsive-sort-items"><i class="fa fa-plus"></i>  sort</li>
                
                    <li select-item="responsive-filter-items"><i class="fa fa-plus"></i>  Filters</li>
                </ul>

                <div class="responsive-items" id="responsive-filter-items">
                    <div class="filter-color">
                        <h2 class="filter-shoe-btn"><i class="fa fa-minus">  color</i></h2>
                        <ul class="filter-group">
                                <li class="list-group-item">White</li>
                                <li class="list-group-item">Black</li>
                                <li class="list-group-item">Red</li>
                                <li class="list-group-item">Green</li>
                                <li class="list-group-item">Blue</li>
                                <li class="list-group-item">Yellow</li>
                                <li class="list-group-item">Orange</li>
                                <li class="list-group-item">Grey</li>
                                <li class="list-group-item">Purple</li>
                        </ul>
                    </div>
                    <hr>
                    <div class="filter-size">
                        <h2 class="mt-4 filter-shoe-btn"><i class="fa fa-minus">  size</i></h2>
                        <ul class="filter-group">
                                <li class="list-group-item">34-35</li>
                                {{!-- <li class="list-group-item">35</li> --}}
                                <li class="list-group-item">36-37</li>
                                {{!-- <li class="list-group-item">37</li> --}}
                                <li class="list-group-item">38-39</li>
                                {{!-- <li class="list-group-item">39</li> --}}
                                <li class="list-group-item">40-41</li>
                                {{!-- <li class="list-group-item">41</li> --}}
                                <li class="list-group-item">42-43</li>
                                {{!-- <li class="list-group-item">43</li> --}}
                                <li class="list-group-item">44-45</li>
                                {{!-- <li class="list-group-item">45</li> --}}
                                <li class="list-group-item">46</li>
                        </ul>
                    </div>
                    <button class="form-control btn btn-outline-dark mb-4">APPLY</button>
                </div>

                <div class="responsive-items" id="responsive-sort-items">
                    <ul class="list-group">
                            <li class="list-group-item">New Arrivals</li>
                            <li class="list-group-item">Cheaper</li>
                            <li class="list-group-item">Expensive</li>
                            <li class="list-group-item">Best Seller</li>
                            <li class="list-group-item">Available</li>
                    </ul>
                    <button class="form-control btn btn-outline-dark mb-4">APPLY</button>
                </div>
            </div>

            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-9 row shoe-list">
                {{#each shoe}}
                    <div class="col-sm-6 col-md-6 col-lg-4">
                        <div class="img-container">
                            <a href="/shoe/{{this._id}}?shoeDetailTitle=Best%20Seller&brandid={{this.brand._id}}">
                                <img src="../uploads/{{this.image}}" alt="{{this.name}}">
                                <div class="overlay overlay-shoe-list"><i class="fa fa-plus"></i> See detail</div>
                            </a>
                        </div>
                        <div class="shoe-list-detail row">
                            <a href="/shoe/{{this._id}}?shoeDetailTitle=Best%20Seller&brandid={{this.brand._id}}">
                                <h1>{{this.name}}</h1>
                            </a>
                            <h2 id="money-dot" class="money-dot-anywhere">{{this.price}}</h2>

                            {{#ifeq this.available false}}
                                <h3>Out of stock</h3>
                            {{else}}
                                {{#ifeq this.bestseller true}}
                                    <h3>Best seller</h3>
                                {{/ifeq}}
                            {{/ifeq}}
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </section>
</div>