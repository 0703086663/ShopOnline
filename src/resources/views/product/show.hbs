
<div class="product-detail-page row justify-content-center">
  <div class="col-md-8 col-lg-6 col-xl-4">
    <div class="card text-black">
      
      <h3 id="logo-product-detail">Bard<span>Pod</span></h3>
      <img id="image-product-detail" src="{{productDetail.image}}"
        class="card-img-top" alt="Pod image" />
        
        <hr>
        <div class="card-body">
          <div class="text-center">
            <h2 class="card-title">{{productDetail.name}} {{productDetail.description}}</h2>
            <p class="text-muted mb-4">Vị {{productDetail.description}}</p>
          </div>
          <div>
            <div class="d-flex justify-content-between">
              <span>Số hơi</span><span>{{productDetail.buff}} lần</span>
            </div>
            <div class="d-flex justify-content-between">
              <span>Số lượng</span><span>{{productDetail.stock}} cái</span>
            </div>
          </div>
          <hr>
          <div class="d-flex justify-content-between total font-weight-bold mt-4">
          <span>Giá</span><span>{{productDetail.price}} VND</span>
        </div>
      </div>
    </div>
  </div>
</div>

 

