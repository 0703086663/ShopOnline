
<div class="sub-header">
    <div class="arrow animated bounce"></div>
    <nav class="subnav">
        <ul id="subnav-right">
            {{#if user}}
              <li>
                <a href="/cart">
                  <i class="fa fa-shopping-cart"></i>
                  {{#if session.cart.totalQty}}
                    <span class="badge badge-danger badge-counter">{{session.cart.totalQty}}</span>
                  {{else}}
                    <span class="badge badge-danger badge-counter">0</span>
                  {{/if}}
                </a>
              </li>
              <li>
                <i class="fa fa-bell fa-shake"></i>
                  
                <div class="subnav-dropdown noti-list">
                  {{!-- <br> --}}
                  {{#each noti}}
                    <div class="number-of-noti dropdown-item align-items-center" data-id="{{this._id}}">
                        <div class="mr-3">
                          {{#ifeq this.isRead false}}
                            <div class="icon-circle bg-primary">
                                <i class="fa fa-envelope text-white"></i>
                                <i class="fa fa-envelope-open text-white" style="position: absolute; display: none;"></i>
                            </div>
                          {{else}}
                            <div class="icon-circle bg-secondary">
                                <i class="fa fa-envelope-open text-white"></i>
                            </div>
                          {{/ifeq}}
                        </div>
                        <div>
                            <div {{#ifeq this.isRead false}} class="font-weight-bold text-500 text-primary" {{else}}class="text-gray-500"{{/ifeq}}>{{moment this.createdAt format = "HH:mm - DD/MM/yyyy"}}</div>
                            <span {{#ifeq this.isRead false}} class="font-weight-bold text-primary" {{/ifeq}}>{{this.desc}}</span>
                        </div>
                    </div>
                    <hr>
                  {{/each}}
                  <div class="subnav-dropdown-items">
                    <a><i class="fa fa-ellipsis-h see-more-icon"></i></a>
                  </div>
                  <hr>
                  <div class="subnav-dropdown-items">
                    <a href="/user/notification"><i class="fa fa-tasks"></i>Read All</a>
                  </div>
                </div>
              </li>
              <li>
                  <a class="active" href="#"><b>{{user.name}}</b></a>
                  <div class="subnav-dropdown">
                    <div class="subnav-dropdown-items">
                      <a href="/user/profile"><i class="fa fa-address-card"></i>My Account</a>
                    </div>
                    <hr>
                    <div class="subnav-dropdown-items">
                      <a href="/user/transfer" id="money-item-nav">
                        <span>
                          <i class="fa fa-money-check"></i>{{formatCurrency user.money}} VND
                          <i class="fas fa-plus-circle"></i>
                        </span>
                      </a>
                    </div>
                    <hr>
                    <div class="subnav-dropdown-items">
                      <a href="/cart"><i class="fa fa-shopping-cart"></i>My purchase</a>
                    </div>
                    <hr>
                    {{#ifeq user.role 'Admin'}}
                      <div class="subnav-dropdown-items">
                        <a href="/admin"><i class="fa fa-tasks"></i>Management</a>
                      </div>
                      <hr>
                    {{/ifeq}}
                    <div class="subnav-dropdown-items">
                      <a onclick="logout()"><i class='fas fa-sign-out-alt'></i>Log out</a>
                    </div>
                  </div>
              </li>
            {{else}}
              <li>
                <a href="/cart">
                  <i class="fa fa-shopping-cart"></i>
                  {{#if session.cart.totalQty}}
                    <span class="badge badge-danger badge-counter">{{session.cart.totalQty}}</span>
                  {{else}}
                    <span class="badge badge-danger badge-counter">0</span>
                  {{/if}}
                </a>
              </li>
              <li>
                  <a class="active" href="/login">Login</a>
              </li>
              <li>
                  <a href="/register">Register</a>
              </li>
            {{/if}}
        </ul>
    </nav>
</div>


<header class="main-header" id="main-header">   
  <div class="row">
    <div class="col-lg-11 col-md-9 col-sm-6 col-9">
      <a href="/" class="logo-icon-header">
        <div id="logo-header">Dus<span>Tin</span></div>
      </a>
    </div>

    <div class="col-lg-1 col-md-3 col-sm-6 col-3">
      <a class="icon logo-icon-header icon-responsive">
      <i id="icon-nav-responsive" class="fa fa-bars"></i>
    </a>
    </div>
  </div>
  
  <nav class="navbar-dropdown-items" id="navbar-dropdown-items">
    <ul>
      {{!-- more than 4 is not beautiful --}}
      {{!-- <a href="/product"><li>Products</li></a>
      <a href="/product/manage"><li>Manage</li></a>
      <a href="/admin"><li>Admin</li></a> --}}
      <a href="/shoe"><li>Shoes</li></a>
      <a href="/cart"><li>Cart</li>
      </a>
      <a href="/shoe/custom" class="btn-info-scroll"><li>Custom Sneaker</li></a>
    </ul>
  </nav>
</header>
<script>
  $('.number-of-noti:nth-of-type(1n+6)').hide()
  $('.see-more-icon').on('click', ()=> {
    $('.number-of-noti:nth-of-type(1n+6)').show()
    $('.number-of-noti:nth-of-type(1n+11)').hide()
    $('.see-more-icon').hide();
  })
</script>


