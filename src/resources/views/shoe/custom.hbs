<script>
    var shoeType1= document.querySelector('.shoe-type-1')
    var shoeType2= document.querySelector('.shoe-type-2')
    var shoeType3= document.querySelector('.shoe-type-3')
    var openImgCustom1=document.querySelector('.open-img-custom-1')
    var openImgCustom2=document.querySelector('.open-img-custom-2')
    var openImgCustom3=document.querySelector('.open-img-custom-3')
    shoeType2.addEventListener('click', function(){
        openImgCustom2.classList.remove('open-img-custom-2')
        openImgCustom3.classList.add('open-img-custom-3')
        openImgCustom1.setAttribute('style', 'display:none')
    })
    shoeType3.addEventListener('click', function(){
        openImgCustom3.classList.remove('open-img-custom-3')
        openImgCustom1.setAttribute('style', 'display:none')
        openImgCustom2.classList.add('open-img-custom-2')
    })
    shoeType1.addEventListener('click', function(){
        openImgCustom2.classList.add('open-img-custom-2')
        openImgCustom3.classList.add('open-img-custom-3')
        openImgCustom1.setAttribute('style', 'display:block')

    })
</script>