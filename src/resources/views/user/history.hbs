<div class="col-lg-9">
    <div class="p-5">
        <h3 class="fw-bold">History</h3>
        <h6 class="mb-4 mt-2 pt-1">Transaction history of payment, recharge</h6>
        {{#if successMsg}}
            <h6 class="text-success"><i class="fa fa-check"></i> {{successMsg}}</h6>
        {{/if}}
        {{#if failedMsg}}
            <h6 class="text-danger"><i class="fa fa-times"></i> {{failedMsg}}</h6>
        {{/if}}
        <hr class="my-0">
        <table class="table table-responsive">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Amount</th>
                <th scope="col">Description</th>
                <th scope="col">Type</th>
                <th scope="col">Status</th>
                <th scope="col">Date</th>
                </tr>
            </thead>
            <tbody>
                {{#each history}}
                    <tr>
                        <th scope="row">{{sum @index 1}}</th>
                        <td>â‚«{{formatCurrency this.amount}}</td>
                        <td>{{this.desc}}</td>
                        <td>{{this.type}}</td>
                        <td>
                            {{#ifeq this.status 'Success'}}
                                <i class="fa fa-check text-success"></i>
                            {{else}}
                                <i class="fa fa-times text-danger"></i>
                            {{/ifeq}}
                        </td>
                        <td>{{moment this.createdAt format = "DD/MM, HH:mm"}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>