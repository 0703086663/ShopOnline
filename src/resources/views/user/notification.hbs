
<div class="col-lg-9">
    <div class="p-5">
        <h3 class="fw-bold">Notifications</h3>
        <h6 class="mb-4 mt-2 pt-1">Notice of transactions, events.</h6>
        {{#if successMsg}}
            <h6 class="text-success"><i class="fa fa-check"></i> {{successMsg}}</h6>
        {{/if}}
        {{#if failedMsg}}
            <h6 class="text-danger"><i class="fa fa-times"></i> {{failedMsg}}</h6>
        {{/if}}
        <hr class="my-0">
        <table class="table table-responsive">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Description</th>
                <th scope="col">Date</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each notification}}
                    <tr>
                        <th scope="row">{{sum @index 1}}</th>
                        <td>{{this.desc}}</td>
                        <td>{{moment this.createdAt format = "DD/MM, HH:mm"}}</td>
                        <td></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>