<div class="col-lg-9">
    <div class="p-5">
        <h3 class="fw-bold">Transfer</h3>
        <h6 class="mb-4 mt-2 pt-1">Deposit money into your account</h6>
        {{#if successMsg}}
            <h6 class="text-success"><i class="fa fa-check"></i> {{successMsg}}</h6>
        {{/if}}
        {{#if failedMsg}}
            <h6 class="text-danger"><i class="fa fa-times"></i> {{failedMsg}}</h6>
        {{/if}}

        <div class="row my-profile-form">
            <div class="col-10">
                <hr class="my-4">
                <div class="form-group row mb-4">
                    <label for="transfer-method-select" class="col-sm-3 col-form-label">Transfer By</label>
                    <div class="col-sm-9">
                        <select class="form-control" name="payment" id="transfer-method-select" required>
                            <option value="">Choose transfer method</option>
                            <option value="momo">Momo</option>
                            <option value="paypal">Paypal</option>
                            <option value="card">Credit Card</option>
                        </select>
                    </div>
                </div>
                <form action="/user/transfer-by-card" method="post" id="payment-form" style="display:none">
                    <div class="form-group row mb-4">
                        <label for="money" class="col-sm-3 col-form-label">Money</label>
                        <div class="col-sm-9">
                        <input type="text" class="form-control" id="money" placeholder="Enter money amount">
                        <input type="hidden" name="money" id="money-transfer" value="">
                        </div>
                    </div>

                    <div class="form-group row mb-2">
                        <label for="card-element" class="col-sm-3 col-form-label">Credit Card</label>
                        <div class="col-sm-9">
                            <div id="card-element" class="form-control">
                            </div>
                            <div id="card-errors" class="text-danger h6" role="alert"></div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <button type="submit" class="btn btn-dark btn-block btn-lg form-control mb-1"
                        data-mdb-ripple-color="dark">Add funds</button>
                </form>

                <form action="" method="post" id="online-transfer-form">
                    <div class="form-group row mb-4">
                        <label for="money" class="col-sm-3 col-form-label">Money</label>
                        <div class="col-sm-9">
                        <input type="text" class="form-control" id="money" placeholder="Enter money amount">
                        <input type="hidden" name="money" id="money-transfer" value="">
                        </div>
                    </div>
                    <input type="hidden" name="userId" value="{{user._id}}">

                    <hr class="my-4">

                    <button type="submit" class="btn btn-dark btn-block btn-lg form-control  mb-1"
                        data-mdb-ripple-color="dark">Add funds</button>
                </form>
            </div>
